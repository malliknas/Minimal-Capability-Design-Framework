{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext", 
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
      "webworker"
    ],
    "types": [
      "@types/node",
      "@mlc-ai/web-llm"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/test-config": ["./src/test-config.ts"],
      "@/model-loader": ["./src/model-loader.ts"],
      "@/evaluator": ["./src/evaluator.ts"],
      "@/drift-detector": ["./src/drift-detector.ts"],
      "@/logger": ["./src/logger.ts"],
      "@/utils": ["./src/utils.ts"],
      "@/browser/*": ["./browser-deployment/src/*"],
      "@/controls/*": ["./browser-deployment/src/controls/*"],
      "@/ui/*": ["./browser-deployment/src/ui/*"],
      "@/execution/*": ["./browser-deployment/src/execution/*"],
      "@/export/*": ["./browser-deployment/src/export/*"],
      "@/chapter7/*": ["./src/chapter7/*"],
      "@/domains/*": ["./src/domains/*"]
    },
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "removeComments": false,
    "preserveConstEnums": true,
    "importsNotUsedAsValues": "preserve",
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.json",
    "browser-deployment/src/**/*",
    "browser-deployment/src/**/*.ts",
    "types/**/*",
    "src/chapter7/**/*",
    "src/domains/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "browser-deployment/dist",
    "*.config.js",
    "*.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    ".git",
    ".vscode",
    "tmp",
    "temp"
  ]
}
